<div id="dentrino-component">
  <div class="processing-form">
    <form method="POST" enctype="multipart/form-data" class="upload-form">
      <!-- <input type="hidden" name="secret" value="{{secret}}"></input> -->
      <fieldset>
        <label for="photo">{{i18n "form:user:image"}}</label>
        <input name="photo" type="file" accept="image/*" capture />
      </fieldset>

      <input type="submit" class="processing-button" value="{{i18n "form:submit"}}"></input>
    </form>
		{{#with simulation}}
      {{#if success}}
        <img src="{{original}}" width="300px" />
        <img src="{{result}}" width="300px" />
      {{else}}
        <p>Error: {{error_message}}</p>
      {{/if}}
		{{/with}}
  </div>

