{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",

    "deploy": "firebase -P dentrino-staging deploy --only functions:simulations_api",
    "save_config": "firebase -P dentrino-staging functions:config:get > .runtimeconfig.json",
    "logs": "firebase -P dentrino-staging functions:log",

    "prod:deploy": "firebase -P dentrino-production deploy --only functions:simulations_api",
    "prod:save_config": "firebase -P dentrino-production functions:config:get > .runtimeconfig.prod.json",
    "prod:logs": "firebase -P dentrino-production functions:log"
  },
  "engines": {
    "node": "16"
  },
  "main": "index.js",
  "dependencies": {
    "@slack/web-api": "^6.7.2",
    "firebase-admin": "^11.0.1",
    "firebase-functions": "^3.18.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.2.0"
  },
  "private": true
}
